{
  "log": {
    "level": "info"
  },
  "dns": {
    "servers": [
      {
        "tag": "remote",
        "type": "tls",
        "server": "8.8.8.8",
        "server_port": 853
      }
    ],
    "strategy": "prefer_ipv4",
    "disable_cache": true,
    "final": "remote",
    "rules": [
      {
        "query_type": ["A", "AAAA"],
        "server": "remote"
      }
    ]
  },
  "inbounds": [
    {
      "type": "vless",
      "tag": "vless-in",
      "listen": "::",
      "listen_port": {{SERVER_PORT}},
      "reuse_addr": true,
      "users": [
        {
          "uuid": "{{UUID}}",
          "flow": ""
        }
      ],
      "network": "tcp",
      "multiplex": {
        "enabled": {{ENABLE_MULTIPLEX}}
      },
      "tls": {
        "enabled": true,
        "server_name": "{{SNI}}",
        "fragment": {
          "tls_fragment": true,
          "tls_record_fragment": true
        },
        "reality": {
          "enabled": true,
          "private_key": "{{REALITY_PRIVATE_KEY}}",
          "short_id": ["{{SHORT_ID}}"]
        }
      },
      "sniff": true
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct",
      "domain_strategy": "prefer_ipv4",
      "bind_interface": "eth0",
      "tcp_fast_open": true
    },
    {
      "type": "block",
      "tag": "block"
    }
  ],
  "route": {
    "rules": [
      {
        "inbound": "vless-in",
        "outbound": "direct"
      }
    ],
    "final": "direct",
    "default_domain_resolver": {
      "server": "remote",
      "strategy": "prefer_ipv4"
    },
    "rule_set": []
  }
}
